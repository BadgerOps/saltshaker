PATH=/bin:/usr/bin:/usr/sbin
SHELL=/bin/bash
MAILTO=root

# process nixspam's files every 2nd day at 4:00am
0  4 */2 *  *     virtmail  cd /var/lib/nixspam; if [ -x blackmatches ]; then mv blackmatches blacklist; fi; rm md5cache

# we have 5000+ mails every 7 days or so, so this is the recommended
# setting
10 4 *   *    0   virtmail  cd /var/lib/nixspam; if [ -x cachematches ]; then mv cachematches spamcache; fi; wget -O cachematches -q http://www.heise.de/ix/nixspam/nixspam.cachematches; chown virtmail.mail cachematches; chmod 664 cachematches

# every month replace whitelist with whitematches
15 4 1   *    *   virtmail  cd /var/lib/nixspam; if [ -x whitematches ]; then mv whitematches whitelist; fi
