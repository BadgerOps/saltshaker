        sh -c 'if ! grep -q maurusnet-rootca /etc/ca-certificates.conf; then echo local/maurusnet-rootca.crt >> /etc/ca-certificates.conf; fi'
        sh -c 'cat > /usr/share/ca-certificates/local/maurusnet-rootca.crt << EOF
-----BEGIN CERTIFICATE-----
